<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="12dp">

    <!-- Student Profile Image -->
    <ImageView
        android:id="@+id/ivStudentImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_profile_placeholder"
        android:layout_marginRight="12dp"
        android:contentDescription="Profile Image"/>

    <!-- Vertical container for text -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">

        <!-- Main message: "You have a new student!" -->
        <TextView
            android:id="@+id/tvNotificationMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You have a new student!"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Subtext: "Nora, 2h ago" -->
        <TextView
            android:id="@+id/tvNotificationSubtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nora, 2h ago"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
    </LinearLayout>

    <!-- Optional icon on the right (e.g. chat/comment icon) -->
    <ImageView
        android:id="@+id/ivChatIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_chat"
        android:contentDescription="Chat Icon"/>
</LinearLayout>
