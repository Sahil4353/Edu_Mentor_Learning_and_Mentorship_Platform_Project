<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title / Header -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule a session with your mentor"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Instruction -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a date and time"
            android:textSize="14sp"
            android:layout_marginBottom="12dp" />

        <!-- CalendarView -->
        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- TextView for selecting time -->
        <TextView
            android:id="@+id/tvSelectTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select time"
            android:padding="12dp"
            android:background="?android:attr/editTextBackground"
            android:layout_marginBottom="16dp" />

        <!-- Additional Notes / Comments -->
        <EditText
            android:id="@+id/etNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Write Mentor Name"
            android:layout_marginBottom="16dp"
            android:padding="12dp"
            android:background="?android:attr/editTextBackground" />

        <!-- Schedule Session Button -->
        <Button
            android:id="@+id/btnScheduleSession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Schedule Session"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:backgroundTint="@android:color/holo_blue_dark"
            android:textColor="@android:color/white"
            android:padding="14dp" />

    </LinearLayout>
</ScrollView>
